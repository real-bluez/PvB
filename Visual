----- Customizing Gui Instances -----

local function updategui()
	local Holding = CheckEquipedTool()
	if Holding then
		HoldText.Text = "Holding: " .. Holding.Name
	else
		HoldText.Text = "Holding: None "
	end
end

Players.LocalPlayer.Character.ChildAdded:Connect(updategui)
Players.LocalPlayer.Character.ChildRemoved:Connect(updategui)

DupeButton.MouseButton1Click:Connect(function()
	local HoldingTool = CheckEquipedTool()
	if HoldingTool then
		local clonedtool = HoldingTool:Clone()
		clonedtool.Parent = Players.LocalPlayer.Backpack
		game:GetService("StarterGui"):SetCore("SendNotification", {
			Title = "Tool Hub ✅", -- Requerido
			Text = "You duped correctly enjoy!",
		})
	else
		game:GetService("StarterGui"):SetCore("SendNotification", {
			Title = "Tool Hub ⚠️", -- Requerido
			Text = "You need to be holding something to dupe!",
		})
		warn("You Need to hold something!")
	end
end)
