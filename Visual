local function updategui()
	local Holding = CheckEquipedTool()
	if Holding then
		Subtitle.Text = "Holding: " .. Holding.Name
	else
		Subtitle.Text = "Holding: None "
	end
end

players.LocalPlayer.Character.ChildAdded:Connect(updategui)
players.LocalPlayer.Character.ChildRemoved:Connect(updategui)

MainButton.MouseButton1Click:Connect(function()
	if _G.Bypass == true then
		local HoldingTool = CheckEquipedTool()
		if HoldingTool then
			local clonedtool = HoldingTool:Clone()
			clonedtool.Parent = players.LocalPlayer.Backpack
			game:GetService("StarterGui"):SetCore("SendNotification", {
				Title = "Tool Script's Hub ‚úÖ", -- Requerido
				Text = "You duped correctly enjoy!",
			})
		else
			game:GetService("StarterGui"):SetCore("SendNotification", {
				Title = "Tool Script's Hub ‚ö†Ô∏è", -- Requerido
				Text = "You need to be holding something to dupe!",
			})
			warn("You Need to hold something!")
		end
	else
		game:GetService("StarterGui"):SetCore("SendNotification", {
			Title = "Tool Script's Hub ‚ö†Ô∏è", -- Requerido
			Text = "You need to bypass first!",
		})
	end
end)

BypassButton.MouseButton1Click:Connect(function()
	if _G.Bypass == false then
		_G.Bypass = true
		local waitingtime = math.random(3, 7)
		game:GetService("StarterGui"):SetCore("SendNotification", {
			Title = "Tool Script's Hub ‚ö†Ô∏è", -- Requerido
			Text = "We are bypassing, please wait!",
		})
		task.wait(waitingtime)
		BySubtitle.Text = "Bypass: Done ‚úÖ"
		game:GetService("StarterGui"):SetCore("SendNotification", {
			Title = "Tool Script's Hub ‚úÖ", -- Requerido
			Text = "We bypassed, now you can generate!",
		})
	else
		game:GetService("StarterGui"):SetCore("SendNotification", {
			Title = "Tool Script's Hub ‚ùå", -- Requerido
			Text = "We already bypassed!",
		})
	end
end)
